
<div class="container" style="width: 20%;margin-left:30%">
  <h2>Select Your Device</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
      </tr>
    </thead>
    <tbody>
      <% @choices.each do |choice| %>
      <tr>
        <td><%= link_to choice.name,choice_path(choice)%></td>
      </tr>
      <%end%>
      </tbody>
    </table>
  </div>